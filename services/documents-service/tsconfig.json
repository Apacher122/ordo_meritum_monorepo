{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@documents/*": ["./src/documents/*"],
      "@database/*": ["./src/database/*"],
      "@utils/*": ["./src/utils/*"],
      "@events/*": ["./src/events/*"],
      "@consumers/*": ["./src/consumers/*"],
      "@producers/*": ["./src/producers/*"],
      "@workers/*": ["./src/workers/*"],
      "@services/*": ["./src/services/*"],
      "@models/*": ["./src/models/*"],
      "@kafka/*": ["./src/kafka/*"]
    },
    "strict": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}